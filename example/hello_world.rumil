Main {

    ~ Program entry point: Main's init takes args as string array
    init(args: strings) {
        print("Hello, world!");

        ~ Flow control
        if #args > 1 {
            print("Args:");

            ~ Iterative (synchronous "for") loop
            arg <- args {
                print(arg);
            }
        } else {
            print("No args supplied");
        }
    }
}